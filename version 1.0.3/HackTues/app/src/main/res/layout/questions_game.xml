<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_A"
        android:layout_marginBottom="20dp"
        android:id="@+id/button_C" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_D"
        android:layout_alignBaseline="@+id/button_C"
        android:layout_alignBottom="@+id/button_C"
        android:layout_alignStart="@+id/button_B" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:id="@+id/button_B"
        android:layout_alignBaseline="@+id/button_A"
        android:layout_alignBottom="@+id/button_A"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_A"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/button_C"
        android:layout_alignParentStart="true"
        android:layout_marginStart="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/question_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/question_text" />

    <ImageView
        android:layout_width="150dp"
        android:id="@+id/question_image"
        android:layout_height="200dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/button_B"
        android:layout_toEndOf="@+id/button_A" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button_B"
        android:layout_marginTop="92dp"
        android:id="@+id/score" />

</RelativeLayout>