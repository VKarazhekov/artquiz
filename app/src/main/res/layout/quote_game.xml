<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button_B"
        android:layout_alignStart="@+id/button_A"
        android:layout_marginTop="26dp"
        android:id="@+id/button_C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:id="@+id/QuestionQuote" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:id="@+id/livesView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/QuestionText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/livesView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/score" />

    <Button
        android:layout_height="50dp"
        android:layout_marginBottom="164dp"
        android:id="@+id/button_A"
        android:layout_width="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/button_D"
        android:layout_alignBaseline="@+id/button_C"
        android:layout_alignBottom="@+id/button_C"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/button_B"
        android:layout_alignBaseline="@+id/button_A"
        android:layout_alignBottom="@+id/button_A"
        android:layout_alignParentEnd="true" />

</RelativeLayout>